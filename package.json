{
  "private": true,
  "name": "react-search-box",
  "version": "2.0.3-next.0",
  "description": "An autocomplete search box for ReactJS",
  "author": "ghoshnirmalya",
  "license": "MIT",
  "repository": "ghoshnirmalya/react-search-box",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --parallel",
    "clean": "lerna clean -y",
    "dev": "lerna run dev --stream --parallel",
    "export": "lerna run export --stream --parallel",
    "release": "release-it",
    "serve": "lerna run serve --stream --parallel",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@release-it/conventional-changelog": "^3.0.0",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.15",
    "@vitejs/plugin-react": "^1.0.4",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "tsup": "^5.4.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
  }
}
